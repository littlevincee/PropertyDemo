@model PropertyDemo.Service.ViewModel.OwnerDetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Property Owner - Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
